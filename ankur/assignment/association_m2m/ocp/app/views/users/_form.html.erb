<%= form_for(@user) do |user_form| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= user_form.label :name %><br />
    <%= user_form.text_field :name %>
  </div>
  <br>
  <div class="field">
    <%= user_form.label :age %><br />
    <%= user_form.text_field :age %>
  </div>
  <br>
  <div class="field">
    <%= user_form.label :email %><br />
    <%= user_form.email_field :email %>
  </div>
  <br>  
  <div class="field">
    <%= label_tag "Groups" %><br />
    <%= select :group, :name, options_from_collection_for_select(Group.all, "id", "name"), prompt: "--Select--" %>
  </div>
  <br>
  <div class="actions">
    <%= user_form.submit %>
  </div>
<% end %>
