<div id="product_list" >
<h1>Listing Books</h1>
<table>
<% @books.each do |book| %>
<tr class="<%= cycle('list_line_odd', 'list_line_even') %>" >
<td>
<%= image_tag(book.img, :class => 'list_image') %>
</td>
<td class="list_description" >
<dl>
<dt><%= book.title %></dt>
<dd><%= book.category %></dd>
<dd><br/>Authors<br/> 
<% book.writers.each do |writer| %>
  
    <%= writer.name %><br/>
    <%= writer.location %><br/>
<% end %></dd>
</dl>
</td>
<td class="list_actions" >
<%= link_to 'Show', book %><br/>
<%= link_to 'Edit', edit_book_path(book) %><br/>
<%= link_to 'Destroy', book,
:confirm => 'Are you sure?',
:method => :delete %>
</td>
</tr>
<% end %>
</table>
</div>
<br />
<%= link_to 'New book', new_book_path %>

